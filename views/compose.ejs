<%- include("partials/header"); -%>

<h1>Compose</h1>

<form class="compose-post" action="/compose" method="POST">
  <div class="form-group">
    <label for="newTitle">Title</label>
    <input class="form-control" type="text" name="newTitle" id="newTitle" autocomplete="no">

    <label for="newPost">Post</label>
    <textarea class="form-control" name="newPost" id="newPost" rows="5" cols="30"></textarea>
  </div>

  <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>


<%- include("partials/footer"); -%>
